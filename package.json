{
	"name": "blog-api",
	"version": "1.0.0",
	"private": true,
	"module": "index.ts",
	"type": "module",
	"scripts": {
		"dev": "bun run src/main.ts",
		"dev:watch": "bun run --watch src/main.ts",
		"prepare": "husky",
		"lint:check": "biome check ./src",
		"lint:fix": "biome check --write ./src"
	},
	"devDependencies": {
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"neverthrow": "^8.2.0",
		"@types/bun": "latest"
	},
	"dependencies": {
		"@biomejs/biome": "^2.1.2",
		"hono": "^4.8.5",
		"zod": "^4.0.5"
	},

	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"lint-staged": {
		"**/*.{ts}": [
			"bun run lint:fix"
		]
	}
}
